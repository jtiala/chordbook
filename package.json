{
  "name": "chordbook",
  "version": "0.1.0",
  "description": "Chords, tabs and lyrics viewer ideal for band practices",
  "keywords": [
    "chords",
    "tabs",
    "lyrics"
  ],
  "author": {
    "name": "Joonas Tiala",
    "email": "joonas.tiala@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jtiala/chordbook.git"
  },
  "bugs": {
    "url": "https://github.com/jtiala/chordbook/issues"
  },
  "homepage": "https://chordbook.jtia.la/",
  "main": "src/index.tsx",
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --hot --watch --watch-content-base --mode development",
    "build": "NODE_ENV=production webpack --mode production",
    "deploy": "yarn firebase deploy --only hosting --token $FIREBASE_TOKEN --project $FIREBASE_PROJECT",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,html,md,json,yml,yaml}'",
    "lint:ts": "eslint src/**/*.{ts,tsx,js}",
    "lint:ts:fix": "eslint src/**/*.{ts,tsx,js} --fix",
    "lint:styles": "stylelint './src/**/*.{ts,tsx,js,jsx,css,scss}'",
    "lint:other": "prettier --list-different '**/*.{md,json,yml,yaml}'",
    "lint": "yarn lint:ts && yarn lint:styles && yarn lint:other",
    "lint:fix": "yarn lint:ts:fix && format",
    "data:export": "yarn data:backup ; firestore-export -a ./data/credentials.json -b ./data/songs.json -p",
    "data:import": "yarn data:backup ; firestore-import -a ./data/credentials.json -b ./data/songs.json -y",
    "data:backup": "cp ./data/songs.json ./data/songs.json.backup"
  },
  "devDependencies": {
    "@types/webpack-env": "^1.13.9",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "dotenv": "^8.0.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "firebase-tools": "^6.10.0",
    "html-webpack-plugin": "^3.2.0",
    "node-firestore-import-export": "^0.13.2",
    "prettier": "^1.17.1",
    "serviceworker-webpack-plugin": "^1.0.1",
    "stylelint": "^10.0.1",
    "stylelint-config-idiomatic-order": "^7.0.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "ts-loader": "^6.0.2",
    "typescript": "^3.5.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.5.1"
  },
  "dependencies": {
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.3",
    "@types/styled-components": "^4.1.15",
    "firebase": "^6.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-firebase-hooks": "^2.0.0",
    "react-router-dom": "^5.0.0",
    "styled-components": "^4.2.1",
    "styled-normalize": "^8.0.6"
  }
}
