{
  "name": "chordbook",
  "version": "0.1.0",
  "description": "Chords, tabs and lyrics viewer ideal for band practices",
  "keywords": [
    "chords",
    "tabs",
    "lyrics"
  ],
  "author": {
    "name": "Joonas Tiala",
    "email": "joonas.tiala@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jtiala/chordbook.git"
  },
  "bugs": {
    "url": "https://github.com/jtiala/chordbook/issues"
  },
  "homepage": "https://chordbook.jtia.la/",
  "main": "src/index.tsx",
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --hot --watch --watch-content-base --mode development",
    "build": "NODE_ENV=production webpack --mode production",
    "deploy": "yarn firebase deploy --only hosting --token $FIREBASE_TOKEN --project $FIREBASE_PROJECT",
    "lint": "tslint -p .",
    "lint:fix": "tslint --fix -p .",
    "data:export": "yarn data:backup && firestore-export -a ./data/credentials.json -b ./data/songs.json -p",
    "data:import": "yarn data:backup && firestore-import -a ./data/credentials.json -b ./data/songs.json -y",
    "data:backup": "cp ./data/songs.json ./data/songs.json.backup"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "dotenv": "^6.2.0",
    "dotenv-webpack": "^1.6.0",
    "firebase-tools": "^6.3.0",
    "html-webpack-plugin": "^3.2.0",
    "node-firestore-import-export": "^0.13.0",
    "prettier": "^1.15.3",
    "serviceworker-webpack-plugin": "^1.0.1",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/styled-components": "^4.1.5",
    "firebase": "^5.7.2",
    "react": "^16.8.0-alpha.0",
    "react-dom": "^16.8.0-alpha.0",
    "react-firebase-hooks": "^0.4.0",
    "react-router-dom": "^4.4.0-beta.6",
    "styled-components": "^4.1.3",
    "styled-normalize": "^8.0.4"
  }
}
