{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Song Data",
  "description": "Schema for a chordbook song",
  "type": "object",
  "properties": {
    "artist": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "sections": {
      "type": "array",
      "items": { "$ref": "#/definitions/section" }
    }
  },
  "definitions": {
    "section": {
      "type": "object",
      "properties": {
        "chords": {
          "type": "object",
          "properties": {
            "lines": {
              "type": "array",
              "items": { "$ref": "#/definitions/chordLine" }
            }
          }
        },
        "lyrics": {
          "type": "object",
          "lines": {
            "type": "array",
            "items": "string"
          }
        }
      }
    },
    "chordLine": {
      "type": "object",
      "properties": {
        "bars": {
          "type": "object",
          "properties": {
            "/": {}
          },
          "patternProperties": {
            "^[0-9]+$": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      }
    },
    "lyrics": {
      "type": "object",
      "properties": {
        "lines": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
